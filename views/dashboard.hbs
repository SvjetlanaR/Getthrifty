<div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/dashboard/new">Add product</a>
    <a style="float:right" href="/logout">Log Out</a>
</div>


<h3>Welcome {{user.fullname}}</h3>
<h4>Update your products here!</h4>

<div class="all-products">
    {{#each productInfo}}
    <div class="img-product">
         <a href="/show/{{_id}}"><img src="{{imgPath}}" alt="Photo for{{title}}"></a>
        <h2 class="product-title">{{title}}</h2>
        <form action="/dashboard/{{_id}}" method="POST">
            <button class="edit-delete-btn" type="submit">Delete</button>    
        </form>
        <form action="/dashboard/{{_id}}" method="POST"></form>
        <button class="edit-delete-btn" type="submit"><a href="/dashboard/edit/{{_id}}" class="delete-btn">Edit</a></button>
        </form>
    </div>
    {{/each}}
</div>

<div class="footer">
  <p>GetThrifty Exchange Marketplace</p>
  <p><img src="/images/logo.png" alt="logo-home" height="30px" width="30px"> 2021. Developed by Svjetlana Rados & Pietro
    Ballarin </p>
</div>