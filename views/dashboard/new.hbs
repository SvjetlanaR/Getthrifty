<h3>Create a product</h3>

<div class="add-product">
  <form action="/dashboard/new" method="POST" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" placeholder="Enter products title">

    <label for="descripton">Description</label>
    <textarea id="description" name="description" placeholder="Describe your product" style="height:70px"></textarea>

    <label for="condition">Condition</label>
    <input type="text" id="lname" name="lastname" placeholder="Enter condition">

    <label for="userEmail">Email</label>
    <input type="text" id="userEmail" name="userEmail" placeholder="Enter your Email">

    <label for="address">Address</label>
    <input type="text" id="address" name="address" placeholder="Enter your Address">

    <label for="price">Price (EUR) </label>
    <input type="number" id="price" name="price" placeholder="Enter price">
    <br>

    <select name="categories">
      {{#each categories}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <label for="photo">Photo: </label>
    <input type="file" name="photo" id="photo">
    <br>
    <br>

   <button class="submit-prod">Submit</button>
  </form>
</div>

