<div class="topnav">
  <a class="active" href="/">Home</a>
  <a href="/dashboard">My products</a>
  <a href="/dashboard/new">Add a product</a>
</div>
<h3>Update product information:</h3>
<div class="add-product">
  {{#with productInfo}}
  <form action="/dashboard/edit/{{_id}}" method="POST" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="{{title}}">
    <br>
    <label for="description">Description:</label>
    <input type="text" name="description" id="description" value="{{description}}">
    <br>
    <label for="condition">Condition:</label>
    <input type="text" name="condition" id="condition" value="{{condition}}">
    <br>
    <label for="userEmail">Email:</label>
    <input type="text" id="userEmail" name="userEmail" value="{{userEmail}}">
    <br>
    <label for="address">Address:</label>
    <input type="text" id="address" name="address" value="{{address}}">
    <br>
    <label for="price">Price (EUR):</label>
    <input type="number" name="price" id="price" value="{{price}}">
    <br>
    {{/with}}

    <select name="categories">
      {{#each categories}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <br>
    <br>
    <label for="photo">Photo: </label>
    <input type="file" name="photo" id="{{photo}}">
    <br>
    <button class="submit-prod">Submit</button>
  </form>

  {{#if message}}
  <h1>{{message}}</h1>
  {{/if}}
</div>

<div class="footer">
  <p>GetThrifty Exchange Marketplace</p>
  <p><img src="/images/logo.png" alt="logo-home" height="30px" width="30px"> 2021. Developed by Svjetlana Rados & Pietro
    Ballarin </p>
</div>