
<div class="topnav">
    <a class="active" href="/">Home</a>
</div>

<div class="search-form">
    <form action="/admin-panel" method="GET">
        <input type="text" placeholder="Search for products" id="title" name="q">
        <button type="submit">Find</button>
    </form>

<div class="all-products">
    {{#each productInfo}}
    <div class="img-product">
        <img src="{{imgPath}}" alt="Photo for{{title}}">
        <h2 class="product-title">{{title}}</h2>
        <h3 class="price-tag">EUR {{price}}</h3>
        <a href="/show/{{_id}}">See details</a>
        <form action="/admin-panel/{{_id}}" method="POST">
      <button type="submit">Delete</button>
      </form>
    </div>
    {{/each}}
</div>
<a style=";" href="/logout">Log Out</a>

<div class="footer">
  <p>GetThrifty Exchange Marketplace</p>
  <p><img src="/images/logo.png" alt="logo-home" height="30px" width="30px"> 2021. Developed by Svjetlana Rados & Pietro
    Ballarin </p>
</div>


    